<div class="body-wrapper">
  <div class="show-container">
    <h1 class="minor-title"><%= @movie.title  %></h1>
    <img class="movie-pic" src="<%=   @movie.poster_url %>">
    <p>Director: <b><%= @movie.director %></b></p>
    <p>Writer: <b><%= @movie.writer %></b></p>
    <p>Release Year: <b><%= @movie.year %></b></p>

    <p>
      Actors:
      <% @movie.actors.each do |actor| %>
        <% if actor == @movie.actors.last %>
          <%= link_to("#{actor.name}", actor)  %>
        <% else %>
          <%= link_to("#{actor.name} | ",   actor) %>
        <% end %>
      <% end %>
    </p>
    <h2>Reviews</h2>
    <% if @movie.reviews %>
      <% @movie.reviews.each do |review| %>
        <% user = User.find(review.user_id) %>
        <div class="review-display">
        <p><%= review.body %></p>
        <p class="username"><%=   user.email %></p>
        <p class="created_at"><%= review.created_at.strftime("%A, %d %b %Y %l:%M %p") %></p>
        </div>
      <% end  %>
    <% end %>
    <% if user_signed_in? %>
    <%= render partial: 'reviews/form', locals: {type: @movie} %><br>
    <% end %>
    <h2>Rating</h2>
    <div class="rating">
      <span><%= render partial: 'ratings/form', locals: {type: @movie, stars: 1} %></span>
      <span><%= render partial: 'ratings/form', locals: {type: @movie, stars: 2} %></span>
      <span><%= render partial: 'ratings/form', locals: {type: @movie, stars: 3} %></span>
      <span><%= render partial: 'ratings/form', locals: {type: @movie, stars: 4} %></span>
      <span><%= render partial: 'ratings/form', locals: {type: @movie, stars: 5} %></span>
    </div>
    <% if user_signed_in? %>
    <p>Rate:</p>
      <% @movie.ratings.each do |rating| %>
        <%= rating.rating %>
      <% end %>
    <% end %>
  </div>
</div>

