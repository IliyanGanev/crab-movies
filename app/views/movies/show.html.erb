<div class="body-wrapper">
  <div class="show-container">
    <h1 class="minor-title"><%= @movie.title  %></h1>
    <img class="movie-pic" src="<%=   @movie.poster_url %>">
    <p>Director: <b><%= @movie.director %></b></p>
    <p>Writer: <b><%= @movie.writer %></b></p>
    <p>Release Year: <b><%= @movie.year %></b></p>
    <p>Actors: <%= render partial: @movie.actors, locals: {movie: @movie} %></p>
    <p>Plot: <%= @movie.plot %></p>

    <video width="400" controls>
    <source src="<%= @movie.trailer_url %>" type="video/mp4">
    Your browser does not support HTML5 video.
    </video>

    <h2>Movie Rating</h2>
    <p class="rating-stars"><%= rating(@movie) %></p>

    <% if user_signed_in? %>
    <p>Rate:</p>
      <%= render partial: '/ratings/rating_buttons', locals: {type: @movie} %>
    <% end %>

    <h2>Movie Reviews</h2>
    <% if @movie.reviews %>
      <%= render @movie.reviews%>
    <% end %>
    <% if user_signed_in? %>
    <%= render partial: 'reviews/form', locals: {type: @movie} %><br>
    <% end %>
  </div>
</div>

